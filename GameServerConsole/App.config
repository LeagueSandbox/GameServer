<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender+ExclusiveLock">
      <file value="Logs\" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level [%logger]%message%newline" />
      </layout>
      <lockingModel type="log4net.Appender.FileAppender" />
      <datePattern value="'LeagueSandbox_'dd.MM.yyyy.ss.ff'.log'" />
      <staticLogFileName value="false" />
      <rollingStyle value="Date" />
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level [%logger]%message%newline" />
      </layout>
    </appender>

    <appender name="AsyncForwarder" type="Log4Net.Async.ParallelForwardingAppender">
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
      <bufferSize value="5000" />
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="AsyncForwarder" />
    </root>
  </log4net>
</configuration>
